@page "/locations"
@inject LocationService LocationService
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar

<PageTitle>Locations</PageTitle>

<MudStack Spacing="2">
    <MudText Typo="Typo.h5">Locations</MudText>
    <MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="@(() => NavigationManager.NavigateTo("/locations/new"))">
        Add Location
    </MudButton>
    <MudTextField @bind-Value="_searchTerm" Placeholder="Search locations..." Adornment="Adornment.Start"
                  AdornmentIcon="@Icons.Material.Filled.Search" Class="mb-2" />
    <MudTable Items="@_locations" Dense="true" Hover="true" Filter="FilterLocations">
        <HeaderContent>
            <MudTh><MudTableSortLabel SortBy="@(location => location.Name)">Name</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="@(location => location.IsHeadOffice)">Head Office</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="@(location => location.District)">District</MudTableSortLabel></MudTh>
            <MudTh></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.Name</MudTd>
            <MudTd>@(context.IsHeadOffice ? "Yes" : "No")</MudTd>
            <MudTd>@context.District</MudTd>
            <MudTd>
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary"
                               OnClick="@(() => NavigationManager.NavigateTo($"/locations/edit/{context.Id}"))" />
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error"
                               OnClick="@(() => DeleteLocation(context.Id))" />
            </MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
</MudStack>

@code {
    private List<LocationDto> _locations = [];
    private string _searchTerm = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        _locations = await LocationService.GetAllAsync();
    }

    private async Task DeleteLocation(int id)
    {
        if (await LocationService.DeleteAsync(id))
        {
            Snackbar.Add("Location deleted.", Severity.Success);
            _locations = await LocationService.GetAllAsync();
        }
        else
        {
            Snackbar.Add("Unable to delete location.", Severity.Error);
        }
    }

    private bool FilterLocations(LocationDto location)
    {
        if (string.IsNullOrWhiteSpace(_searchTerm))
        {
            return true;
        }

        return location.Name.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase)
               || (location.District?.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase) ?? false)
               || (location.IsHeadOffice ? "yes" : "no").Contains(_searchTerm, StringComparison.OrdinalIgnoreCase);
    }
}
