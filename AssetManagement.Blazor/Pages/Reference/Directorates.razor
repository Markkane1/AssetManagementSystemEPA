@page "/directorates"
@inject DirectorateService DirectorateService
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar

<PageTitle>Directorates</PageTitle>

<MudStack Spacing="2">
    <MudText Typo="Typo.h5">Directorates</MudText>
    <MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="@(() => NavigationManager.NavigateTo("/directorates/new"))">
        Add Directorate
    </MudButton>
    <MudTextField @bind-Value="_searchTerm" Placeholder="Search directorates..." Adornment="Adornment.Start"
                  AdornmentIcon="@Icons.Material.Filled.Search" Class="mb-2" />
    <MudTable Items="@_directorates" Dense="true" Hover="true" Filter="FilterDirectorates">
        <HeaderContent>
            <MudTh><MudTableSortLabel SortBy="@(directorate => directorate.Name)">Name</MudTableSortLabel></MudTh>
            <MudTh></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.Name</MudTd>
            <MudTd>
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary"
                               OnClick="@(() => NavigationManager.NavigateTo($"/directorates/edit/{context.Id}"))" />
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error"
                               OnClick="@(() => DeleteDirectorate(context.Id))" />
            </MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
</MudStack>

@code {
    private List<DirectorateDto> _directorates = [];
    private string _searchTerm = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        _directorates = await DirectorateService.GetAllAsync();
    }

    private async Task DeleteDirectorate(int id)
    {
        if (await DirectorateService.DeleteAsync(id))
        {
            Snackbar.Add("Directorate deleted.", Severity.Success);
            _directorates = await DirectorateService.GetAllAsync();
        }
        else
        {
            Snackbar.Add("Unable to delete directorate.", Severity.Error);
        }
    }

    private bool FilterDirectorates(DirectorateDto directorate)
    {
        if (string.IsNullOrWhiteSpace(_searchTerm))
        {
            return true;
        }

        return directorate.Name.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase);
    }
}
