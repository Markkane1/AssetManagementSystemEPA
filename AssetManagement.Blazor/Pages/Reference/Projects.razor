@page "/projects"
@inject ProjectService ProjectService
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar

<PageTitle>Projects</PageTitle>

<MudStack Spacing="2">
    <MudText Typo="Typo.h5">Projects</MudText>
    <MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="@(() => NavigationManager.NavigateTo("/projects/new"))">
        Add Project
    </MudButton>
    <MudTextField @bind-Value="_searchTerm" Placeholder="Search projects..." Adornment="Adornment.Start"
                  AdornmentIcon="@Icons.Material.Filled.Search" Class="mb-2" />
    <MudTable Items="@_projects" Dense="true" Hover="true" Filter="FilterProjects">
        <HeaderContent>
            <MudTh><MudTableSortLabel SortBy="@(project => project.Name)">Name</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="@(project => project.ProjectDescription)">Description</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="@(project => project.ProjectRunBy)">Run By</MudTableSortLabel></MudTh>
            <MudTh></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.Name</MudTd>
            <MudTd>@context.ProjectDescription</MudTd>
            <MudTd>@context.ProjectRunBy</MudTd>
            <MudTd>
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary"
                               OnClick="@(() => NavigationManager.NavigateTo($"/projects/edit/{context.Id}"))" />
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error"
                               OnClick="@(() => DeleteProject(context.Id))" />
            </MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
</MudStack>

@code {
    private List<ProjectDto> _projects = [];
    private string _searchTerm = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        _projects = await ProjectService.GetAllAsync();
    }

    private async Task DeleteProject(int id)
    {
        if (await ProjectService.DeleteAsync(id))
        {
            Snackbar.Add("Project deleted.", Severity.Success);
            _projects = await ProjectService.GetAllAsync();
        }
        else
        {
            Snackbar.Add("Unable to delete project.", Severity.Error);
        }
    }

    private bool FilterProjects(ProjectDto project)
    {
        if (string.IsNullOrWhiteSpace(_searchTerm))
        {
            return true;
        }

        return project.Name.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase)
               || (project.ProjectDescription?.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase) ?? false)
               || (project.ProjectRunBy?.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase) ?? false);
    }
}
