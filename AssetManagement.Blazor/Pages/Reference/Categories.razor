@page "/categories"
@inject CategoryService CategoryService
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar

<PageTitle>Categories</PageTitle>

<MudStack Spacing="2">
    <MudText Typo="Typo.h5">Categories</MudText>
    <MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="@(() => NavigationManager.NavigateTo("/categories/new"))">
        Add Category
    </MudButton>
    <MudTextField @bind-Value="_searchTerm" Placeholder="Search categories..." Adornment="Adornment.Start"
                  AdornmentIcon="@Icons.Material.Filled.Search" Class="mb-2" />
    <MudTable Items="@_categories" Dense="true" Hover="true" Filter="FilterCategories">
        <HeaderContent>
            <MudTh><MudTableSortLabel SortBy="@(category => category.Name)">Name</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="@(category => category.Description)">Description</MudTableSortLabel></MudTh>
            <MudTh></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.Name</MudTd>
            <MudTd>@context.Description</MudTd>
            <MudTd>
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary"
                               OnClick="@(() => NavigationManager.NavigateTo($"/categories/edit/{context.Id}"))" />
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error"
                               OnClick="@(() => DeleteCategory(context.Id))" />
            </MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
</MudStack>

@code {
    private List<CategoryDto> _categories = [];
    private string _searchTerm = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        _categories = await CategoryService.GetAllAsync();
    }

    private async Task DeleteCategory(int id)
    {
        if (await CategoryService.DeleteAsync(id))
        {
            Snackbar.Add("Category deleted.", Severity.Success);
            _categories = await CategoryService.GetAllAsync();
        }
        else
        {
            Snackbar.Add("Unable to delete category.", Severity.Error);
        }
    }

    private bool FilterCategories(CategoryDto category)
    {
        if (string.IsNullOrWhiteSpace(_searchTerm))
        {
            return true;
        }

        return category.Name.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase)
               || (category.Description?.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase) ?? false);
    }
}
