@page "/vendors"
@inject VendorService VendorService
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar

<PageTitle>Vendors</PageTitle>

<MudStack Spacing="2">
    <MudText Typo="Typo.h5">Vendors</MudText>
    <MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="@(() => NavigationManager.NavigateTo("/vendors/new"))">
        Add Vendor
    </MudButton>
    <MudTextField @bind-Value="_searchTerm" Placeholder="Search vendors..." Adornment="Adornment.Start"
                  AdornmentIcon="@Icons.Material.Filled.Search" Class="mb-2" />
    <MudTable Items="@_vendors" Dense="true" Hover="true" Filter="FilterVendors">
        <HeaderContent>
            <MudTh><MudTableSortLabel SortBy="@(vendor => vendor.Name)">Name</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="@(vendor => vendor.Address)">Address</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="@(vendor => vendor.ContactNumber)">Contact</MudTableSortLabel></MudTh>
            <MudTh></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.Name</MudTd>
            <MudTd>@context.Address</MudTd>
            <MudTd>@context.ContactNumber</MudTd>
            <MudTd>
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary"
                               OnClick="@(() => NavigationManager.NavigateTo($"/vendors/edit/{context.Id}"))" />
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error"
                               OnClick="@(() => DeleteVendor(context.Id))" />
            </MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
</MudStack>

@code {
    private List<VendorDto> _vendors = [];
    private string _searchTerm = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        _vendors = await VendorService.GetAllAsync();
    }

    private async Task DeleteVendor(int id)
    {
        if (await VendorService.DeleteAsync(id))
        {
            Snackbar.Add("Vendor deleted.", Severity.Success);
            _vendors = await VendorService.GetAllAsync();
        }
        else
        {
            Snackbar.Add("Unable to delete vendor.", Severity.Error);
        }
    }

    private bool FilterVendors(VendorDto vendor)
    {
        if (string.IsNullOrWhiteSpace(_searchTerm))
        {
            return true;
        }

        return vendor.Name.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase)
               || (vendor.Address?.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase) ?? false)
               || (vendor.ContactNumber?.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase) ?? false);
    }
}
