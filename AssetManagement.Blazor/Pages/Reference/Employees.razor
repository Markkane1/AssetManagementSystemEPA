@page "/employees"
@inject EmployeeService EmployeeService
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar

<PageTitle>Employees</PageTitle>

<MudStack Spacing="2">
    <MudText Typo="Typo.h5">Employees</MudText>
    <MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="@(() => NavigationManager.NavigateTo("/employees/new"))">
        Add Employee
    </MudButton>
    <MudTable Items="@_employees" Dense="true" Hover="true">
        <HeaderContent>
            <MudTh>Name</MudTh>
            <MudTh>Email</MudTh>
            <MudTh>Directorate</MudTh>
            <MudTh></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.Name</MudTd>
            <MudTd>@context.Email</MudTd>
            <MudTd>@context.DirectorateName</MudTd>
            <MudTd>
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary"
                               OnClick="@(() => NavigationManager.NavigateTo($"/employees/edit/{context.Id}"))" />
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error"
                               OnClick="@(() => DeleteEmployee(context.Id))" />
            </MudTd>
        </RowTemplate>
    </MudTable>
</MudStack>

@code {
    private List<EmployeeDto> _employees = [];

    protected override async Task OnInitializedAsync()
    {
        _employees = await EmployeeService.GetAllAsync();
    }

    private async Task DeleteEmployee(int id)
    {
        if (await EmployeeService.DeleteAsync(id))
        {
            Snackbar.Add("Employee deleted.", Severity.Success);
            _employees = await EmployeeService.GetAllAsync();
        }
        else
        {
            Snackbar.Add("Unable to delete employee.", Severity.Error);
        }
    }
}
